{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "TechRadarDatabase": "Host=localhost;Database=techradar;Username=;Password="
  },
  "Logging": {
    "OpenTelemetry": {
      "IncludeFormattedMessage": true,
      "IncludeScopes": true,
      "ParseStateValues": true
    }
  },
  "Identity": {
    "ApplicationName": "techradar.data",
    "Authority": "https://auth.mattgerega.net",
    "Enabled": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    }
  },
  "Telemetry": {
    "ActivitySourceName": "Techradar.Data.Activity",
    "Log": {
      "Otlp": {
        "Endpoint": "",
        "Protocol": "http"
      },
      "Type": "otlp"
    },
    "MeterName": "Techradar.Data.Meter",
    "Metrics": {
      "Otlp": {
        "Endpoint": "",
        "Protocol": "http"
      },
      "Type": "otlp"
    },
    "ServiceName": "Techradar.Data",
    "Trace": {
      "Otlp": {
        "Endpoint": ""
      },
      "Type": "otlp"
    }
  }
}
